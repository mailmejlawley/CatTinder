<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/tinderwithoutbuttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_game">


    <Button
        android:layout_width="168dp"
        android:layout_height="200dp"
        android:background="@drawable/hiss"
        android:layout_marginTop="32dp"
        android:id="@+id/hiss_btn"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/home_btn"
        android:layout_alignStart="@+id/home_btn" />

    <Button
        android:layout_width="168dp"
        android:layout_height="200dp"
        android:background="@drawable/pet"
        android:id="@+id/pet_btn"
        android:layout_alignBottom="@+id/hiss_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/soundon"
        android:id="@+id/sound_btn"
        android:layout_alignBottom="@+id/home_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_alignTop="@+id/home_btn" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_btn"
        android:background="@drawable/home"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/cat"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignBottom="@+id/sound_btn"
        android:layout_alignLeft="@+id/home_btn"
        android:layout_marginBottom="87dp" />
</RelativeLayout>
